pipeline {
    agent any

    environment {
        IMAGE_NAME = "mywebsite"
        IMAGE_TAG = "latest"
        CONTAINER_NAME = "flamboyant_proskuriakova"
    }

    stages {
        stage('Pull Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Aman-ux-source/your-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${mywebsite}:${latest} ."
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    // Stop and remove old container if running
                    sh """
                    if [ \$(docker ps -q -f name=${flamboyant_proskuriakova}) ]; then
                        docker rm -f ${flamboyant_proskuriakova}
                    fi
                    """

                    // Run new container
                    sh "docker run -d --name ${newcontainer} -p 9090:80 ${mywebsite}:${latest}"
                }
            }
        }
    }
}
