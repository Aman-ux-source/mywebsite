  <script>
    // Theme toggle (light/dark) with localStorage
    const themeBtn = document.getElementById('themeBtn');
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const saved = localStorage.getItem('theme');
    if (saved === 'light') document.documentElement.classList.add('light');
    if (!saved && !prefersDark) document.documentElement.classList.add('light');
    themeBtn.addEventListener('click', () => {
      const isLight = document.documentElement.classList.toggle('light');
      localStorage.setItem('theme', isLight ? 'light' : 'dark');
      themeBtn.setAttribute('aria-pressed', String(isLight));
    });

    // Scroll reveal animations
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.animate([
            { transform:'translateY(14px)', opacity: .001 },
            { transform:'translateY(0)', opacity: 1 }
          ], { duration: 500, easing: 'cubic-bezier(.2,.8,.2,1)', fill:'forwards' });
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: .12 });
    document.querySelectorAll('.card, .tile').forEach(el => observer.observe(el));

    // Tiny tilt effect on hover (no library)
    const clamp = (n, min, max) => Math.max(min, Math.min(n, max));
    document.querySelectorAll('[data-tilt]').forEach((el) => {
      const strength = 10; // deg
      el.addEventListener('mousemove', (e) => {
        const r = el.getBoundingClientRect();
        const px = (e.clientX - r.left) / r.width; // 0..1
        const py = (e.clientY - r.top) / r.height;
        const rx = clamp((.5 - py) * strength, -strength, strength);
        const ry = clamp((px - .5) * strength, -strength, strength);
        el.style.transform = `perspective(600px) rotateX(${rx}deg) rotateY(${ry}deg) translateZ(0)`;
      });
      el.addEventListener('mouseleave', () => {
        el.style.transform = 'perspective(600px) rotateX(0) rotateY(0)';
        el.style.transition = 'transform 200ms ease';
        setTimeout(() => el.style.transition = '', 220);
      });
    });

    // Fake submit for the demo form
    const fakeBtn = document.getElementById('fakeSubmit');
    const thanks = document.getElementById('thanks');
    fakeBtn.addEventListener('click', () => {
      thanks.classList.remove('hidden');
      fakeBtn.textContent = 'Sent âœ”';
      fakeBtn.disabled = true;
      setTimeout(() => { fakeBtn.textContent = 'Send message'; fakeBtn.disabled = false; thanks.classList.add('hidden'); }, 2400);
    });

    // Year in footer
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
